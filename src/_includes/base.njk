<!DOCTYPE html>
<html lang="en">
  <head>
    {%- set pageTitle %}
      {% if title %}{{ title }} | {% endif %}{{ meta.siteName }}
    {% endset -%} 
    {%- set pageDescription %}
      {% if description %}
        {{ description }}
      {% else %}
        {{ meta.siteDescription }}
      {% endif %}
    {% endset -%}
    {# 
    {%- set pageSocialImg %}
      {{ meta.url }}/previews/
      {% if title %}
        {{ title | slug }}
      {% else %}
        home
      {% endif %}
      .png
      {% endset -%}
    #}
    <meta charset="UTF-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no, viewport-fit=cover"
    />
    <meta name="generator" content="{{ eleventy.generator }}" />
    <title>{{ pageTitle | trim }}</title>
    <meta name="description" content="{{ pageDescription | trim }}" />
    <link rel="stylesheet" href="/static/styles/fonts.css" />
    <link rel="stylesheet" href="/static/styles/style.css?v={% version %}" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
<link rel="manifest" href="/site.webmanifest">
<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
<meta name="msapplication-TileColor" content="#ffc40d">
<meta name="theme-color" content="#ffffff">
    {% if title === 'Contact' %}
    <script src="//unpkg.com/alpinejs" defer></script>
    {% endif %}
    {#
    <meta name="twitter:card" content="summary_large_image" />
    {% if meta.twitterUsername %}
      <meta name="twitter:creator" content="@{{ meta.twitterUsername }}" />
    {% endif %}
    <meta name="twitter:title" content="{{pageTitle}}" />
    <meta name="twitter:description" content="{{pageDescription}}" />
    #}
    <meta name="og:title" content="{{ pageTitle | trim }}" />
    <meta name="og:description" content="{{ pageDescription | trim }}" />
    {#
    <meta property="og:image" content="{{pageSocialImg}}" />
    <meta name="twitter:image" content="{{pageSocialImg}}" />
    #} 
    {% block head %}{% endblock %}
  </head>
  <body class="bg-stone-50 text-stone-900">
    <div class="flex h-screen flex-col antialiased">
      <header class="w-full bg-stone-900 isolate">
        {% include "./partials/header.njk" %}
      </header>
      <main class="container mx-auto max-w-screen-lg flex-grow bg-stone-50 sm:p-4 lg:px-12">
        {{ content | safe }}
      </main>
      <footer class="bg-stone-800 text-stone-100">
        {% include "./partials/footer.njk" %}
      </footer>
    </div>
  </body>
</html>
